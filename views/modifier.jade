doctype html
html
   include ./header.jade
   body
    nav.navbar.navbar-inverse
       div.navbar-header
        button.navbar-toggle(type = "button" ,data-toggle="collapse",data-target="#list")
         span.sr-only Toggle navigation
         span.icon-bar
         span.icon-bar
         span.icon-bar
        a.navbar-brand(href = "#") SauvNotes
       div.collapse.navbar-collapse(id="list")
        ul.nav.navbar-nav
           li
             a(href="/telecharger") ajouter une matiere
           li
             a(href="/admin") administration
           li
             a(href="/list") afficher mes notes
           li
             a(href="/modifier") modifier mes notes
           li
             a(href="/logout") se deconnecter
    div.container
       div.col-md-8.col-xs-8.col-lg-6.offset-3
        fieldset
            legend
              strong saisissez une mati√®re
            form(action="/modifier",method="post",data-toggle="validator")
             div.row

              div.form-group
               -valeur=""
               each valeur in listeMat
                 label.radio-inline
                  input(type="radio",name="optradio",value=valeur ,required)
                  p.=valeur
                 div.help-block.with-errors
              div.form-group
                label(for="pwd") Nom:
                input.form-control(type="text", name="nom",placeholder="nom d'eleve",data-error="entrez une note valide /20",required)
                div.help-block.with-errors
              div.form-group
                label(for="pwd") Note:
                input.form-control(type="text", name="note",placeholder="entrez une note",pattern="^(([0-1]?[0-9][.]{1}[0-9]+)|(20[.]{1}0{1,2}))$",data-error="entrez une note valide",required)
                div.help-block.with-errors
              button.btn.btn-default(type="submit",value="Login") Modifier

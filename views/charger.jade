doctype html
html
   include ./header.jade
   body
    nav.navbar.navbar-inverse
       div.navbar-header
        button.navbar-toggle(type = "button" ,data-toggle="collapse",data-target="#list")
         span.sr-only Toggle navigation
         span.icon-bar
         span.icon-bar
         span.icon-bar
        a.navbar-brand(href = "#") SauvNotes
       div.collapse.navbar-collapse(id="list")
        ul.nav.navbar-nav
           li
             a(href="/admin") administration
           li
             a(href="/telecharger") ajouter une matiere
           li
             a(href="/list") afficher mes notes
           li
             a(href="/modifier") modifier mes notes
           li
             a(href="/logout") se deconnecter
    div.container
       div.col-md-8.col-xs-8.col-lg-6.offset-3
        fieldset
            legend
              strong saisissez une matière
            form(action="/charger",method="post",data-toggle="validator",enctype="multipart/form-data")
             div.row
              div.form-group
                label(for="pwd") Matière:
                input.form-control(type="text", name="mat",placeholder="nom de la matière",data-error="obligatoire",required)
                div.help-block.with-errors
                div.form-group
                label.control-label(for="pwd") Notes:
                input.file(type="file", name="note",placeholder="charger le csv",data-error="obligatoire",required)
                div.help-block.with-errors
              button.btn.btn-default(type="submit",value="Login") Ajouter 
